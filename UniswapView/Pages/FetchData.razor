@page "/fetchdata"

@using UniswapView.Data
@inject CandlesService candlesService
@inject IJSRuntime jsRuntime

<h1>Uniswap candles</h1>

<div id="chart_div" style="height: 400px"></div>

@code { 
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await jsRuntime.InvokeVoidAsync("drawChart",
            "https://localhost:5001/api/Candles?symbol=0x8ad599c3a0ff1de082011efddc58f1908eb6e6d8" +
            "&periodSeconds=300&limit=1000");
    }
}
